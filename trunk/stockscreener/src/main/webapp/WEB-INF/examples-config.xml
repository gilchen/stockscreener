<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >

<faces-config>

	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
	</application>

	<!-- managed beans of the simple hello world app -->
	<managed-bean>
		<managed-bean-name>alertBean</managed-bean-name>
		<managed-bean-class>com.stocks.AlertBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>stockService</property-name>
			<value>#{stockService}</value>
		</managed-property>
	</managed-bean>

	<!-- navigation rules for helloWorld.jsp -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>alert</from-outcome>
			<to-view-id>/alert.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/page2.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- navigation rules for page2.jsp -->
	<navigation-rule>
		<from-view-id>/page2.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>