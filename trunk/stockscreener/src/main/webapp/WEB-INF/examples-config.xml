<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >

<faces-config>

	<application>
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
		<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
	</application>

	<!-- managed beans of the simple hello world app -->
	<managed-bean>
		<managed-bean-name>alertBean</managed-bean-name>
		<managed-bean-class>com.stocks.AlertBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>stockService</property-name>
			<value>#{stockService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>bseIciciMappingBean</managed-bean-name>
		<managed-bean-class>com.stocks.BseIciciMappingBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>stockService</property-name>
			<value>#{stockService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>importDataBean</managed-bean-name>
		<managed-bean-class>com.stocks.ImportDataBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>bseImportService</property-name>
			<value>#{bseImportService}</value>
		</managed-property>
		<managed-property>
			<property-name>nyseImportService</property-name>
			<value>#{nyseImportService}</value>
		</managed-property>
		<managed-property>
			<property-name>stockService</property-name>
			<value>#{stockService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>commandBean</managed-bean-name>
		<managed-bean-class>com.stocks.CommandBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>reportChain</property-name>
			<value>#{reportChain}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>reportsBean</managed-bean-name>
		<managed-bean-class>com.stocks.ReportsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>bseAlertReportCommand</property-name>
			<value>#{bseAlertReportCommand}</value>
		</managed-property>
		<managed-property>
			<property-name>bseReportCommand</property-name>
			<value>#{bseReportCommand}</value>
		</managed-property>
		<managed-property>
			<property-name>nyseReportCommand</property-name>
			<value>#{nyseReportCommand}</value>
		</managed-property>
	</managed-bean>

	<!-- navigation rules for helloWorld.jsp -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>alert</from-outcome>
			<to-view-id>/alert.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/page2.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>bse_icici_mapping</from-outcome>
			<to-view-id>/bse_icici_mapping.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>import_data</from-outcome>
			<to-view-id>/import_data.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>

	<!-- navigation rules for page2.jsp -->
	<navigation-rule>
		<from-view-id>/page2.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>back</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>